<%- include('_header') %>


<body style="padding: 50px;" class="animate__animated animate__fadeInUp"> 
    <div class = "card" style="padding:20px; margin:12% auto; width: 50%;">
        <h3> Create account</h3>
        <form action="/usercreate" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" placeholder="Name" class="form-control">
            </div>

            <div class="form-group">
                  <label for="username">username</label>
                  <input type="text" name="username" id="username" placeholder="username" class="form-control">
            </div>
          
              <div class="form-group">
                  <label for="password">password</label>
                  <input type="password" name="password" id="password" placeholder="password" class="form-control">
              </div>

              <div class="form-group">
                <label for="passnum">passport number</label>
                <input type="number" name="passnum" id="passnum" placeholder="passport number" class="form-control">
            </div> 

            <div class="form-group">
                <label for="gender">Gender</label>
                <select name="gender" id="gender" class="form-control">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div> 

            
            <div class="form-group">
                <label for="origin">Your country of origin</label>
                <input list="origin" name="origin" class="form-control">
                <datalist id="origin">
                    <option value="Afghanistan">
                    <option value="America"></option>         
                    <option value="Australia">
                    <option value="China">
                    <option value="India">
                    <option value="Indonesia">
                    <option value="Japan"></option>
                    <option value="South Korea"></option>
                    <option value="United Kingdom"></option>
                </datalist>
            </div> 

          
          
              <button  class="btn btn-dark"  type="submit">Create</button>
              
          </form>
         <a href="/userlogin">back</a> 
    </div>
</body>
